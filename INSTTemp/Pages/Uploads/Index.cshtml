@page
@model INSTTemp.Pages.Uploads.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Add New Lecture</a>
</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model._Upl[0].lectureName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._Upl[0].lectureNumber)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model._Upl[0].CreatedOn)
            </th>
            <th>Commands</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model._Upl) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.lectureName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lectureNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
